<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RegisterUserActivity">

    <include
        android:id="@+id/include4"
        layout="@layout/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/birth_year_input"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="31dp"
        android:ems="10"
        android:hint="@string/year_hint"
        android:textColorHint="@color/black"
        android:inputType="number"
        android:maxLength="4"
        app:layout_constraintBaseline_toBaselineOf="@+id/birth_day_input"
        app:layout_constraintEnd_toEndOf="@+id/l_name_input" />

    <TextView
        android:id="@+id/weight_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="81dp"
        android:layout_marginBottom="83dp"
        android:text="@string/weight_label"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/save_usr_data_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sex_label" />

    <TextView
        android:id="@+id/height_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="18dp"
        android:text="@string/height_label"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sex_label" />

    <TextView
        android:id="@+id/birthday_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:text="@string/date_of_birth_label"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintBaseline_toBaselineOf="@+id/birth_month_input"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/sex_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:text="@string/sex_label"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/birthday_label" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="19dp"
        android:text="@string/set_up_health_details_page_title"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/f_name_label"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/f_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="303dp"
        android:text="First Name"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/l_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="9dp"
        android:text="Last Name"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/f_name_input" />

    <EditText
        android:id="@+id/f_name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:digits="@string/valid_name_input"
        android:ems="10"
        android:hint="@string/enter_your_first_name_hint"
        android:inputType="text|textPersonName"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/f_name_label"
        app:layout_constraintEnd_toEndOf="@+id/app_name"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@+id/f_name_label"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/l_name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:digits="@string/valid_name_input"
        android:ems="10"
        android:maxLines="1"
        android:hint="@string/enter_your_last_name_hint"
        android:inputType="text|textPersonName"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/l_name_label"
        app:layout_constraintStart_toStartOf="@+id/f_name_input"
        app:layout_constraintTop_toBottomOf="@+id/l_name_label" />

    <EditText
        android:id="@+id/birth_month_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:hint="@string/month_hint"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:inputType="number"
        android:maxLength="2"
        app:layout_constraintBottom_toTopOf="@+id/sex_input"
        app:layout_constraintEnd_toStartOf="@+id/birth_day_input"
        app:layout_constraintStart_toEndOf="@+id/birthday_label" />

    <EditText
        android:id="@+id/birth_day_input"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:layout_marginEnd="61dp"
        android:ems="10"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:hint="@string/day_hint"
        android:inputType="number"
        android:maxLength="2"
        app:layout_constraintEnd_toEndOf="@+id/birth_year_input"
        app:layout_constraintStart_toStartOf="@+id/l_name_input"
        app:layout_constraintTop_toTopOf="@+id/birth_month_input" />

    <Button
        android:id="@+id/save_usr_data_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="33dp"
        android:text="@string/next_btn_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/weight_input" />

    <EditText
        android:id="@+id/height_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:ems="10"
        android:hint="@string/enter_your_height_hint"
        android:textColorHint="@color/black"
        android:inputType="number|numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/weight_input"
        app:layout_constraintStart_toStartOf="@+id/sex_input" />

    <EditText
        android:id="@+id/weight_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:textColorHint="@color/black"
        android:ems="10"
        android:hint="@string/enter_your_weight_hint"
        android:inputType="number|numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/save_usr_data_btn"
        app:layout_constraintStart_toStartOf="@+id/height_input" />

    <Spinner
        android:id="@+id/sex_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="@color/black"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toTopOf="@+id/height_input"
        app:layout_constraintEnd_toEndOf="@+id/birth_month_input"
        app:layout_constraintStart_toEndOf="@+id/birth_month_input" />


</androidx.constraintlayout.widget.ConstraintLayout>
